// This is your Prisma schema file
// Learn more in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider     = "postgresql"
  relationMode = "prisma"
}

/**
 * ===============================================================
 * USERS, AUTH & ADMINISTRATION
 * ===============================================================
 */

model User {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  emailVerified Boolean  @default(false)
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relaciones
  sessions Session[] // sesiones activas del usuario
  accounts Account[] // conexiones externas (Google, etc.)
  business Business? // un usuario puede tener un comercio
  admin    Admin? // o ser administrador
  profile  Profile? // perfil del usuario

  emailVerificationTokens EmailVerificationToken[]
  passwordResetTokens     PasswordResetToken[]

  userRole UserRole @default(USER) // rol del usuario
  isBanned Boolean? @default(false)

  @@map("user")
}

model EmailVerificationToken {
  id        String   @id @default(cuid())
  userId    String   @unique
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Profile {
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade) // un usuario puede tener un perfil
  name      String
  phone     String?
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  avatar Image? @relation("Avatar")

  @@map("profile")
}

model Admin {
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade) // un usuario puede ser admin

  // Relaciones con objetos baneados
  bannedBusinesses BannedBusiness[] // aqui se guardarian los comercios baneado por el admin y por quien fue baneado
  bannedProducts   BannedProduct[] // aqui se guardarian los productos baneado por el admin y por quien fue baneado
  bannedImages     BannedImages[] // aqui se guardarian las imagenes baneadas por el admin y por quien fue baneado
  permissions      Permission[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admin")
}

model BannedBusiness {
  id         String   @id @default(cuid())
  bannedById String
  bannedBy   Admin    @relation(fields: [bannedById], references: [userId], onDelete: Cascade)
  businessId String   @unique
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([bannedById])
}

model BannedProduct {
  id         String   @id @default(cuid())
  bannedById String
  bannedBy   Admin    @relation(fields: [bannedById], references: [userId], onDelete: Cascade)
  productId  String   @unique
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([bannedById])
}

model BannedImages {
  id         String   @id @default(cuid())
  bannedById String
  bannedBy   Admin    @relation(fields: [bannedById], references: [userId], onDelete: Cascade)
  imageKey   String   @unique
  image      Image    @relation(fields: [imageKey], references: [key], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([bannedById])
}

/**
 * ===============================================================
 * AUTHENTICATION
 * ===============================================================
 */

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade) // sesión pertenece a un usuario

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  token String

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id           String    @id @default(cuid())
  accountId    String
  providerId   String
  userId       String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade) // cuenta vinculada al usuario
  accessToken  String?
  refreshToken String?
  idToken      String?
  expiresAt    DateTime?
  password     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?

  @@unique([providerId, accountId])
  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String // email o identificador
  value      String // token o código
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, value])
  @@map("verification")
}

/**
 * ===============================================================
 * BUSINESS & PLANES
 * ===============================================================
 */

model Business {
  id          String         @id @default(cuid())
  name        String
  isActive    Boolean        @default(true)
  description String?
  logo        Image?         @relation("Logo")
  coverImage  Image?         @relation("CoverImage")
  phone       String?
  whatsapp    String?
  email       String         @unique
  website     String?
  facebook    String?
  instagram   String?
  address     String?
  verified    Boolean        @default(false)
  status      BusinessStatus @default(PENDING_VERIFICATION)

  // Subscripción del comercio
  currentPlan CurrentPlan?

  // Propietario
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Relaciones
  products       Product[] // productos del comercio
  payments       Payment[] // historial de pagos
  bannedBusiness BannedBusiness? // si el usuario fue baneado
  isBanned       Boolean?        @default(false)

  businessView businessView[] // visitas al comercio
  trial        Trial? // prueba gratuita activa

  category   Category? @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId String?

  tags String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([categoryId])
}

model CurrentPlan {
  id                 String     @id @default(cuid())
  businessId         String     @unique
  business           Business   @relation(fields: [businessId], references: [id], onDelete: Cascade)
  planType           PlanType
  plan               Plan       @relation(fields: [planType], references: [type], onDelete: Cascade)
  planStatus         PlanStatus @default(INACTIVE)
  isTrial            Boolean    @default(false)
  productsUsed       Int        @default(0)
  imagesUsed         Int        @default(0)
  hasStatistics      Boolean    @default(false)
  canFeatureProducts Boolean    @default(false)

  expiresAt   DateTime
  activatedAt DateTime
  isActive    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([planType])
}

model Category {
  id    String @id @default(cuid())
  value String @unique
  label String

  products   Product[]
  businesses Business[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Plan {
  type               PlanType @unique
  name               String
  description        String
  price              Float
  features           String[]
  maxProducts        Int
  maxImages          Int
  hasStatistics      Boolean  @default(false)
  canFeatureProducts Boolean  @default(false)
  isActive           Boolean  @default(true)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  currentPlans CurrentPlan[]
}

/**
 * ===============================================================
 * PRODUCTOS, PAGOS E IMÁGENES
 * ===============================================================
 */

model Product {
  id          String  @id @default(cuid())
  name        String
  description String?
  price       Float?

  featured Boolean @default(false) // solo visible si el plan es PREMIUM
  active   Boolean @default(true)

  stock Int?    @default(0)
  brand String?

  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  bannedProduct BannedProduct? // si el usuario fue baneado
  isBanned      Boolean?       @default(false)

  images      Image[] // imágenes asociadas
  productView productView[] // vistas del producto
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  category   Category? @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId String?

  tags String[]

  @@index([businessId])
  @@index([featured])
  @@index([active])
  @@index([categoryId])
}

model Payment {
  id            String  @id @default(cuid())
  amount        Float
  currency      String  @default("ARS")
  status        String // pending, approved, rejected
  paymentMethod String?

  // Datos de Mercado Pago
  mpPaymentId String? @unique
  mpStatus    String?

  // Plan adquirido
  plan PlanType

  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([businessId])
  @@index([status])
}

model Image {
  key         String  @unique
  url         String
  isMainImage Boolean @default(false)
  name        String?
  size        Float?
  isReported  Boolean @default(false)

  // Relaciones con producto, comercio y posts
  product   Product? @relation(fields: [productId], references: [id])
  productId String?

  logoBusinessId String?   @unique
  logoBusiness   Business? @relation("Logo", fields: [logoBusinessId], references: [id], onDelete: Cascade)

  coverBusinessId String?   @unique
  coverBusiness   Business? @relation("CoverImage", fields: [coverBusinessId], references: [id], onDelete: Cascade)

  avatarId String?  @unique
  avatar   Profile? @relation("Avatar", fields: [avatarId], references: [userId], onDelete: Cascade)

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  bannedImages BannedImages? // si la imagen fue baneada
  isBanned     Boolean?      @default(false)

  @@index([productId])
  @@index([coverBusinessId])
  @@index([logoBusinessId])
}

/**
 * ===============================================================
 * VISTAS Y EVENTOS
 * ===============================================================
 */

model productView {
  id        String  @id @default(cuid())
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  referrer  String?

  @@index([productId])
}

model businessView {
  id         String   @id @default(cuid())
  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  referrer   String?

  @@index([businessId])
}

model WebhookEvent {
  id          String    @id @default(cuid())
  requestId   String    @unique
  eventType   String
  mpId        String? // id del objeto en Mercado Pago
  payload     Json
  createdAt   DateTime  @default(now())
  processed   Boolean   @default(false)
  processedAt DateTime?
}

/**
 * ===============================================================
 * PLANES GRATUITOS, CUPONES Y ANALITICAS
 * ===============================================================
 */

model Analytics {
  id            String   @id @default(cuid())
  date          DateTime @unique
  totalTrials   Int      @default(0)
  activeTrials  Int      @default(0)
  totalPayments Int      @default(0)
  totalRevenue  Float    @default(0)
}

model Trial {
  id          String   @id @default(cuid())
  businessId  String   @unique
  business    Business @relation(fields: [businessId], references: [id], onDelete: Cascade) // comercio que usa el trial
  plan        PlanType @default(PREMIUM) // plan otorgado temporalmente
  expiresAt   DateTime // fecha en que finaliza la prueba
  activatedAt DateTime @default(now())
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Log {
  id         String   @id @default(cuid())
  timestamp  DateTime @default(now())
  businessId String?
  adminId    String?
  action     String
  entityType String?
  entityId   String?
  details    Json?

  @@index([timestamp])
  @@index([businessId])
  @@index([adminId])
  @@index([entityType])
  @@index([entityId])
}

/**
 * ===============================================================
 * ENUMERACIONES
 * ===============================================================
 */

enum PlanType {
  FREE
  BASIC
  PREMIUM
}

enum PlanStatus {
  ACTIVE
  INACTIVE
  CANCELLED
  EXPIRED
}

enum UserRole {
  ADMIN
  USER
  BUSINESS
  SUPER_ADMIN
}

enum Permission {
  ALL
  BAN_USERS
  MANAGE_PLANS
}

enum BusinessStatus {
  PENDING_VERIFICATION
  ACTIVE
  SUSPENDED
  INACTIVE
}
