// This is your Prisma schema file
// Learn more in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

/**
 * ===============================================================
 * USERS, AUTH & ADMINISTRATION
 * ===============================================================
 */

model User {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  emailVerified Boolean  @default(false)
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relaciones
  sessions Session[] // sesiones activas del usuario
  accounts Account[] // conexiones externas (Google, etc.)
  business Business? // un usuario puede tener un comercio
  admin    Admin? // o ser administrador

  userRole   UserRole    @default(USER) // rol del usuario
  bannedUser BannedUser? // si el usuario fue baneado

  @@map("user")
}

model Admin {
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade) // un usuario puede ser admin

  // Relaciones con objetos baneados
  bannedBusinesses BannedBusiness[]
  bannedUsers      BannedUser[]
  bannedProducts   BannedProduct[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admin")
}

model BannedBusiness {
  bannedById String @unique
  bannedBy   Admin  @relation(fields: [bannedById], references: [userId], onDelete: Cascade) // admin que banea

  businessId String   @unique
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade) // comercio baneado

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BannedUser {
  bannedById String @unique
  bannedBy   Admin  @relation(fields: [bannedById], references: [userId], onDelete: Cascade) // admin que banea

  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade) // usuario baneado

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BannedProduct {
  bannedById String @unique
  bannedBy   Admin  @relation(fields: [bannedById], references: [userId], onDelete: Cascade) // admin que banea

  productId String  @unique
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade) // producto baneado

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/**
 * ===============================================================
 * AUTHENTICATION
 * ===============================================================
 */

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade) // sesión pertenece a un usuario

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  token String

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id           String    @id @default(cuid())
  accountId    String
  providerId   String
  userId       String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade) // cuenta vinculada al usuario
  accessToken  String?
  refreshToken String?
  idToken      String?
  expiresAt    DateTime?
  password     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?

  @@unique([providerId, accountId])
  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String // email o identificador
  value      String // token o código
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, value])
  @@map("verification")
}

/**
 * ===============================================================
 * BUSINESS & SUBSCRIPTIONS
 * ===============================================================
 */

model Business {
  id          String  @id @default(cuid())
  name        String
  description String?
  logo        Image?  @relation("Logo")
  coverImage  Image?  @relation("CoverImage")
  phone       String?
  whatsapp    String?
  email       String?
  website     String?
  facebook    String?
  instagram   String?
  twitter     String?
  address     String?
  category    String?
  hours       String?

  // Subscripción del comercio
  plan          SubscriptionPlan   @default(FREE)
  planStatus    SubscriptionStatus @default(ACTIVE)
  planExpiresAt DateTime? // fecha de expiración del plan actual

  // Propietario
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Relaciones
  products         Product[] // productos del comercio
  payments         Payment[] // historial de pagos
  bannedBusinesses BannedBusiness[] // si fue baneado
  businessView     businessView[] // visitas al comercio
  trial            Trial? // prueba gratuita activa
  couponRedemption CouponRedemption[] // canjes de cupones realizados

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([plan])
  @@index([planStatus])
}

/**
 * ===============================================================
 * PRODUCTOS, PAGOS E IMÁGENES
 * ===============================================================
 */

model Product {
  id          String  @id @default(cuid())
  name        String
  description String?
  price       Float?
  category    String?
  featured    Boolean @default(false) // solo visible si el plan es PREMIUM
  active      Boolean @default(true)

  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  bannedProducts BannedProduct[] // si fue baneado por el admin

  images      Image[] // imágenes asociadas
  productView productView[] // vistas del producto
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([businessId])
  @@index([featured])
  @@index([active])
  @@index([category])
}

model Payment {
  id            String  @id @default(cuid())
  amount        Float
  currency      String  @default("ARS")
  status        String // pending, approved, rejected
  paymentMethod String?

  // Datos de Mercado Pago
  mpPaymentId String? @unique
  mpStatus    String?

  // Plan adquirido
  plan SubscriptionPlan

  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([businessId])
  @@index([status])
}

model Image {
  key         String  @unique
  url         String  @unique
  isMainImage Boolean @default(false)
  name        String?
  size        Float?

  // Relaciones con producto y comercio
  product   Product? @relation(fields: [productId], references: [id])
  productId String?

  logoBusinessId String?   @unique
  logoBusiness   Business? @relation("Logo", fields: [logoBusinessId], references: [id])

  coverBusinessId String?   @unique
  coverBusiness   Business? @relation("CoverImage", fields: [coverBusinessId], references: [id])

  @@index([productId])
  @@index([coverBusinessId])
  @@index([logoBusinessId])
}

/**
 * ===============================================================
 * VISTAS Y EVENTOS
 * ===============================================================
 */

model productView {
  id        String  @id @default(cuid())
  productId String
  product   Product @relation(fields: [productId], references: [id])

  createdAt DateTime @default(now())
  referrer  String?

  @@index([productId])
}

model businessView {
  id         String   @id @default(cuid())
  businessId String
  business   Business @relation(fields: [businessId], references: [id])
  createdAt  DateTime @default(now())
  referrer   String?

  @@index([businessId])
}

model WebhookEvent {
  id          String    @id @default(cuid())
  requestId   String    @unique
  eventType   String
  mpId        String? // id del objeto en Mercado Pago
  payload     Json
  createdAt   DateTime  @default(now())
  processed   Boolean   @default(false)
  processedAt DateTime?
}

/**
 * ===============================================================
 * PLANES GRATUITOS, CUPONES Y ANALITICAS
 * ===============================================================
 */

model Analytics {
  id               String   @id @default(cuid())
  date             DateTime @unique
  totalTrials      Int      @default(0)
  activeTrials     Int      @default(0)
  totalCoupons     Int      @default(0)
  totalRedemptions Int      @default(0)
  totalPayments    Int      @default(0)
  totalRevenue     Float    @default(0)
}

model Trial {
  id          String           @id @default(cuid())
  businessId  String           @unique
  business    Business         @relation(fields: [businessId], references: [id], onDelete: Cascade) // comercio que usa el trial
  plan        SubscriptionPlan @default(PREMIUM) // plan otorgado temporalmente
  expiresAt   DateTime // fecha en que finaliza la prueba
  activatedAt DateTime         @default(now())
  isActive    Boolean          @default(true)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

model Coupon {
  id           String           @id @default(cuid())
  code         String           @unique // código canjeable
  plan         SubscriptionPlan @default(PREMIUM)
  durationDays Int              @default(30) // duración del beneficio
  maxUses      Int? // límite de usos (opcional)
  usedCount    Int              @default(0)
  expiresAt    DateTime? // fecha de expiración del cupón
  active       Boolean          @default(true)

  // Canjes realizados con este cupón
  redemptions CouponRedemption[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CouponRedemption {
  id         String   @id @default(cuid())
  couponId   String
  coupon     Coupon   @relation(fields: [couponId], references: [id], onDelete: Cascade) // cupón usado
  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade) // comercio que lo canjeó
  redeemedAt DateTime @default(now())

  @@index([businessId])
  @@index([couponId])
}

/**
 * ===============================================================
 * ENUMERACIONES
 * ===============================================================
 */

enum SubscriptionPlan {
  FREE
  BASIC
  PREMIUM
}

enum SubscriptionStatus {
  ACTIVE
  INACTIVE
  CANCELLED
  EXPIRED
}

enum UserRole {
  ADMIN
  USER
  BUSINESS
}
