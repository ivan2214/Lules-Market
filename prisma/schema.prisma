// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

// Better Auth tables

model User {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  emailVerified Boolean  @default(false)
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  sessions Session[]
  accounts Account[]
  business Business?
  admin    Admin?

  userRole   UserRole    @default(USER)
  bannedUser BannedUser?

  @@map("user")
}

model Admin {
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade) // un usuario puede ser admin

  bannedBusinesses BannedBusiness[] // comercios baneados por el admin
  bannedUsers      BannedUser[] // usuarios baneados por el admin
  bannedProducts   BannedProduct[] // productos baneados por el admin

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admin")
}

model BannedBusiness {
  bannedById String @unique
  bannedBy   Admin  @relation(fields: [bannedById], references: [userId], onDelete: Cascade) // el admin que banea

  // comercio baneado
  businessId String   @unique
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BannedUser {
  bannedById String @unique
  bannedBy   Admin  @relation(fields: [bannedById], references: [userId], onDelete: Cascade)

  // usuario baneado
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BannedProduct {
  bannedById String @unique
  bannedBy   Admin  @relation(fields: [bannedById], references: [userId], onDelete: Cascade)

  // producto baneado
  productId String  @unique
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  token String

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id           String    @id @default(cuid())
  accountId    String
  providerId   String
  userId       String
  accessToken  String?
  refreshToken String?
  idToken      String?
  expiresAt    DateTime?
  password     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?

  @@unique([providerId, accountId])
  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, value])
  @@map("verification")
}

// Business and subscription models

model Business {
  id          String  @id @default(cuid())
  name        String
  description String?
  logo        Image?  @relation("Logo")
  coverImage  Image?  @relation("CoverImage")
  phone       String?
  whatsapp    String?
  email       String?
  website     String?
  facebook    String?
  instagram   String?
  twitter     String?
  address     String?
  category    String?
  hours       String?

  // Subscription
  plan          SubscriptionPlan   @default(FREE)
  planStatus    SubscriptionStatus @default(ACTIVE)
  planExpiresAt DateTime?

  // Owner
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Relations
  products Product[]
  payments Payment[]

  // Banned
  bannedBusinesses BannedBusiness[]

  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  businessView     businessView[]
  trial            Trial?
  couponRedemption CouponRedemption[]

  @@index([plan])
  @@index([planStatus])
}

model Product {
  id          String  @id @default(cuid())
  name        String
  description String?
  price       Float?
  category    String?
  featured    Boolean @default(false) // Only for PREMIUM plan
  active      Boolean @default(true)

  // Business relation
  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  // Banned
  bannedProducts BannedProduct[]

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  images      Image[]
  productView productView[]

  @@index([businessId])
  @@index([featured])
  @@index([active])
  @@index([category])
}

model Payment {
  id            String  @id @default(cuid())
  amount        Float
  currency      String  @default("ARS")
  status        String // pending, approved, rejected
  paymentMethod String?

  // Mercado Pago data
  mpPaymentId String? @unique
  mpStatus    String?

  // Plan purchased
  plan SubscriptionPlan

  // Business relation
  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([businessId])
  @@index([status])
}

model Image {
  key            String    @unique
  url            String    @unique
  isMainImage    Boolean   @default(false)
  name           String?
  size           Float?
  // relations
  product        Product?  @relation(fields: [productId], references: [id])
  productId      String?
  logoBusinessId String?   @unique
  logoBusiness   Business? @relation("Logo", fields: [logoBusinessId], references: [id])

  coverBusinessId String?   @unique
  coverBusiness   Business? @relation("CoverImage", fields: [coverBusinessId], references: [id])

  @@index([productId])
  @@index([coverBusinessId])
  @@index([logoBusinessId])
}

model productView {
  id        String  @id @default(cuid())
  productId String
  product   Product @relation(fields: [productId], references: [id])

  createdAt DateTime @default(now())
  referrer  String?

  @@index([productId])
}

model businessView {
  id         String   @id @default(cuid())
  businessId String
  business   Business @relation(fields: [businessId], references: [id])

  createdAt DateTime @default(now())
  referrer  String?

  @@index([businessId])
}

model WebhookEvent {
  id          String    @id @default(cuid())
  requestId   String    @unique
  eventType   String
  mpId        String? // id objeto MP (payment id, etc)
  payload     Json
  createdAt   DateTime  @default(now())
  processed   Boolean   @default(false)
  processedAt DateTime?
}

model Trial {
  id          String           @id @default(cuid())
  businessId  String           @unique
  business    Business         @relation(fields: [businessId], references: [id], onDelete: Cascade)
  plan        SubscriptionPlan @default(PREMIUM)
  expiresAt   DateTime
  activatedAt DateTime         @default(now())
  isActive    Boolean          @default(true)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

model Coupon {
  id           String           @id @default(cuid())
  code         String           @unique
  plan         SubscriptionPlan @default(PREMIUM)
  durationDays Int              @default(30)
  maxUses      Int? // opcional, para limitar cantidad total de usos
  usedCount    Int              @default(0)
  expiresAt    DateTime? // opcional, para que el cup√≥n caduque
  active       Boolean          @default(true)

  // Cupones canjeados
  redemptions CouponRedemption[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CouponRedemption {
  id         String   @id @default(cuid())
  couponId   String
  coupon     Coupon   @relation(fields: [couponId], references: [id], onDelete: Cascade)
  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  redeemedAt DateTime @default(now())

  @@index([businessId])
  @@index([couponId])
}

/**
 * ENUM
 */

enum SubscriptionPlan {
  FREE
  BASIC
  PREMIUM
}

enum SubscriptionStatus {
  ACTIVE
  INACTIVE
  CANCELLED
  EXPIRED
}

enum UserRole {
  ADMIN
  USER
  BUSINESS
}
