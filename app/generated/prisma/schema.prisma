// This is your Prisma schema file
// Learn more in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

/**
 * ===============================================================
 * USERS, AUTH & ADMINISTRATION
 * ===============================================================
 */

model User {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  emailVerified Boolean  @default(false)
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relaciones
  sessions Session[] // sesiones activas del usuario
  accounts Account[] // conexiones externas (Google, etc.)
  business Business? // un usuario puede tener un comercio
  admin    Admin? // o ser administrador

  reviews            Review[] // Opiniones del usuario
  questions          Question[] // Preguntas realizadas por el usuario
  answers            Answer[] // Respuestas del usuario
  favoriteProducts   FavoriteProduct[] // Productos favoritos del usuario
  favoriteBusinesses FavoriteBusiness[] // Comercios favoritos del usuario
  notifications      Notification[] // Notificaciones del usuario
  reportedReviews    ReportedReview[] // Reviews reportadas por el usuario
  reportedQuestions  ReportedQuestion[] // Preguntas reportadas por el usuario
  reportedProducts   ReportedProduct[] // Productos reportados por el usuario
  reportedBusinesses ReportedBusiness[] // Comercios reportados por el usuario

  userRole UserRole @default(USER) // rol del usuario
  isBanned Boolean? @default(false)

  @@map("user")
}

model Admin {
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade) // un usuario puede ser admin

  // Relaciones con objetos baneados
  bannedBusinesses BannedBusiness[] // aqui se guardarian los comercios baneado por el admin y por quien fue baneado
  bannedProducts   BannedProduct[] // aqui se guardarian los productos baneado por el admin y por quien fue baneado
  bannedImages     BannedImages[] // aqui se guardarian las imagenes baneadas por el admin y por quien fue baneado
  permissions      Permission[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admin")
}

model BannedBusiness {
  id         String   @id @default(cuid())
  bannedById String
  bannedBy   Admin    @relation(fields: [bannedById], references: [userId], onDelete: Cascade)
  businessId String   @unique
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([bannedById])
}

model BannedProduct {
  id         String   @id @default(cuid())
  bannedById String
  bannedBy   Admin    @relation(fields: [bannedById], references: [userId], onDelete: Cascade)
  productId  String   @unique
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([bannedById])
}

model BannedImages {
  id         String   @id @default(cuid())
  bannedById String
  bannedBy   Admin    @relation(fields: [bannedById], references: [userId], onDelete: Cascade)
  imageKey   String   @unique
  image      Image    @relation(fields: [imageKey], references: [key], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([bannedById])
}

/**
 * ===============================================================
 * AUTHENTICATION
 * ===============================================================
 */

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade) // sesión pertenece a un usuario

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  token String

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id           String    @id @default(cuid())
  accountId    String
  providerId   String
  userId       String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade) // cuenta vinculada al usuario
  accessToken  String?
  refreshToken String?
  idToken      String?
  expiresAt    DateTime?
  password     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?

  @@unique([providerId, accountId])
  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String // email o identificador
  value      String // token o código
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, value])
  @@map("verification")
}

/**
 * ===============================================================
 * BUSINESS & PLANES
 * ===============================================================
 */

model Business {
  id          String  @id @default(cuid())
  name        String
  isActive    Boolean @default(true)
  description String?
  logo        Image?  @relation("Logo")
  coverImage  Image?  @relation("CoverImage")
  phone       String?
  whatsapp    String?
  email       String? @unique
  website     String?
  facebook    String?
  instagram   String?
  address     String?
  verified    Boolean @default(false)

  // Subscripción del comercio
  plan          PlanType   @default(FREE)
  planStatus    PlanStatus @default(ACTIVE)
  planExpiresAt DateTime? // fecha de expiración del plan actual

  // Propietario
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Relaciones
  products       Product[] // productos del comercio
  payments       Payment[] // historial de pagos
  bannedBusiness BannedBusiness? // si el usuario fue baneado
  isBanned       Boolean?        @default(false)

  businessView     businessView[] // visitas al comercio
  trial            Trial? // prueba gratuita activa
  couponRedemption CouponRedemption[] // canjes de cupones realizados

  categories    Category[]
  subCategories SubCategory[]

  reviews            Review[] // opiniones sobre el comercio
  answers            Answer[] // respuestas del comercio
  favorites          FavoriteBusiness[] // usuarios que marcaron el comercio como favorito
  reportedBusinesses ReportedBusiness[] // reportes realizados sobre el comercio

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([plan])
  @@index([planStatus])
}

model Category {
  id    String @id @default(cuid())
  value String @unique
  label String

  products      Product[]
  businesses    Business[]
  subCategories SubCategory[]

  /**
   * imagen de la categoria
   */
  categoryImage Image?

  /**
   * Answer category
   */

  categoryQuestions Question[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SubCategory {
  id    String @id @default(cuid())
  value String
  label String

  products   Product[]
  businesses Business[]
  category   Category   @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId String

  /**
   * imagen de la subcategoria
   */
  subCategoryImage Image?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([categoryId])
}

model Plan {
  id          String   @id @default(cuid())
  type        PlanType @unique
  name        String
  description String
  price       Float
  features    String[]
  maxProducts Int
  maxImages   Int
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

/**
 * ===============================================================
 * PRODUCTOS, PAGOS E IMÁGENES
 * ===============================================================
 */

model Product {
  id          String  @id @default(cuid())
  name        String
  description String?
  price       Float?

  featured Boolean @default(false) // solo visible si el plan es PREMIUM
  active   Boolean @default(true)

  stock     Int?             @default(0)
  condition ProductCondition @default(NEW)
  brand     String?
  model     String?

  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  bannedProduct BannedProduct? // si el usuario fue baneado
  isBanned      Boolean?       @default(false)

  images      Image[] // imágenes asociadas
  productView productView[] // vistas del producto
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  categories    Category[]
  subCategories SubCategory[]

  reviews          Review[] // opiniones sobre el producto
  favorites        FavoriteProduct[] // usuarios que marcaron el producto como favorito
  reportedProducts ReportedProduct[] // reportes realizados sobre el producto

  @@index([businessId])
  @@index([featured])
  @@index([active])
}

model Payment {
  id            String  @id @default(cuid())
  amount        Float
  currency      String  @default("ARS")
  status        String // pending, approved, rejected
  paymentMethod String?

  // Datos de Mercado Pago
  mpPaymentId String? @unique
  mpStatus    String?

  // Plan adquirido
  plan PlanType

  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([businessId])
  @@index([status])
}

model Image {
  key         String  @unique
  url         String  @unique
  isMainImage Boolean @default(false)
  name        String?
  size        Float?
  isReported  Boolean @default(false)

  // Relaciones con producto y comercio
  product   Product? @relation(fields: [productId], references: [id])
  productId String?

  logoBusinessId String?   @unique
  logoBusiness   Business? @relation("Logo", fields: [logoBusinessId], references: [id])

  coverBusinessId String?   @unique
  coverBusiness   Business? @relation("CoverImage", fields: [coverBusinessId], references: [id])

  categoryId String?   @unique
  category   Category? @relation(fields: [categoryId], references: [id])

  subCategoryId String?      @unique
  subCategory   SubCategory? @relation(fields: [subCategoryId], references: [id])

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  bannedImages BannedImages? // si la imagen fue baneada
  isBanned     Boolean?      @default(false)

  @@index([productId])
  @@index([coverBusinessId])
  @@index([logoBusinessId])
}

/**
 * ===============================================================
 * VISTAS Y EVENTOS
 * ===============================================================
 */

model productView {
  id        String  @id @default(cuid())
  productId String
  product   Product @relation(fields: [productId], references: [id])

  createdAt DateTime @default(now())
  referrer  String?

  @@index([productId])
}

model businessView {
  id         String   @id @default(cuid())
  businessId String
  business   Business @relation(fields: [businessId], references: [id])
  createdAt  DateTime @default(now())
  referrer   String?

  @@index([businessId])
}

model WebhookEvent {
  id          String    @id @default(cuid())
  requestId   String    @unique
  eventType   String
  mpId        String? // id del objeto en Mercado Pago
  payload     Json
  createdAt   DateTime  @default(now())
  processed   Boolean   @default(false)
  processedAt DateTime?
}

/**
 * ===============================================================
 * PLANES GRATUITOS, CUPONES Y ANALITICAS
 * ===============================================================
 */

model Analytics {
  id               String   @id @default(cuid())
  date             DateTime @unique
  totalTrials      Int      @default(0)
  activeTrials     Int      @default(0)
  totalCoupons     Int      @default(0)
  totalRedemptions Int      @default(0)
  totalPayments    Int      @default(0)
  totalRevenue     Float    @default(0)
}

model Trial {
  id          String   @id @default(cuid())
  businessId  String   @unique
  business    Business @relation(fields: [businessId], references: [id], onDelete: Cascade) // comercio que usa el trial
  plan        PlanType @default(PREMIUM) // plan otorgado temporalmente
  expiresAt   DateTime // fecha en que finaliza la prueba
  activatedAt DateTime @default(now())
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Coupon {
  id           String    @id @default(cuid())
  code         String    @unique // código canjeable
  plan         PlanType  @default(PREMIUM)
  durationDays Int       @default(30) // duración del beneficio
  maxUses      Int? // límite de usos (opcional)
  usedCount    Int       @default(0)
  expiresAt    DateTime? // fecha de expiración del cupón
  active       Boolean   @default(true)

  // Canjes realizados con este cupón
  redemptions CouponRedemption[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CouponRedemption {
  id         String   @id @default(cuid())
  couponId   String
  coupon     Coupon   @relation(fields: [couponId], references: [id], onDelete: Cascade) // cupón usado
  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade) // comercio que lo canjeó
  redeemedAt DateTime @default(now())

  @@index([businessId])
  @@index([couponId])
}

/**
 * ===============================================================
 * REVIEWS / OPINIONES
 * ===============================================================
 */

model Review {
  id      String @id @default(cuid())
  rating  Int // 1-5 estrellas
  comment String

  // Autor de la review
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Puede ser sobre un producto o un comercio
  productId  String?
  product    Product?  @relation(fields: [productId], references: [id], onDelete: Cascade)
  businessId String?
  business   Business? @relation(fields: [businessId], references: [id], onDelete: Cascade)

  // Respuesta del comercio
  answer Answer?

  // Imágenes adjuntas a la review
  images ReviewImage[]

  // Utilidad de la review
  helpfulCount Int @default(0)

  // Reportes
  reports ReportedReview[]

  isHidden Boolean @default(false) // si fue ocultada por moderación

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([productId])
  @@index([businessId])
  @@index([rating])
}

model ReviewImage {
  id       String @id @default(cuid())
  url      String
  key      String
  reviewId String
  review   Review @relation(fields: [reviewId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([reviewId])
}

/**
 * ===============================================================
 * QUESTIONS / PREGUNTAS
 * ===============================================================
 */

model Question {
  id          String  @id @default(cuid())
  title       String
  content     String
  isAnonymous Boolean @default(false)

  // Autor de la pregunta
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Categoría opcional para filtrar preguntas
  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])

  // Respuestas a la pregunta
  answers Answer[]

  // Reportes
  reports ReportedQuestion[]

  isResolved Boolean @default(false) // si tiene una respuesta aceptada
  viewCount  Int     @default(0)
  isHidden   Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([categoryId])
  @@index([isResolved])
}

/**
 * ===============================================================
 * ANSWERS / RESPUESTAS
 * ===============================================================
 */

model Answer {
  id      String @id @default(cuid())
  content String

  // Puede ser respuesta a una pregunta o a una review
  questionId String?   @unique
  question   Question? @relation(fields: [questionId], references: [id], onDelete: Cascade)
  reviewId   String?   @unique
  review     Review?   @relation(fields: [reviewId], references: [id], onDelete: Cascade)

  // Autor de la respuesta (usuario o comercio)
  userId     String?
  user       User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  businessId String?
  business   Business? @relation(fields: [businessId], references: [id], onDelete: Cascade)

  isAccepted   Boolean @default(false) // si es la respuesta aceptada (para preguntas)
  helpfulCount Int     @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([businessId])
  @@index([questionId])
  @@index([reviewId])
}

/**
 * ===============================================================
 * FAVORITES / FAVORITOS
 * ===============================================================
 */

model FavoriteProduct {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, productId])
  @@index([userId])
  @@index([productId])
}

model FavoriteBusiness {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())

  @@unique([userId, businessId])
  @@index([userId])
  @@index([businessId])
}

/**
 * ===============================================================
 * REPORTS / REPORTES
 * ===============================================================
 */

model ReportedReview {
  id      String  @id @default(cuid())
  reason  String
  details String?

  userId   String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  reviewId String
  review   Review @relation(fields: [reviewId], references: [id], onDelete: Cascade)

  status ReportStatus @default(PENDING)

  createdAt  DateTime  @default(now())
  resolvedAt DateTime?

  @@index([userId])
  @@index([reviewId])
  @@index([status])
}

model ReportedQuestion {
  id      String  @id @default(cuid())
  reason  String
  details String?

  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  status ReportStatus @default(PENDING)

  createdAt  DateTime  @default(now())
  resolvedAt DateTime?

  @@index([userId])
  @@index([questionId])
  @@index([status])
}

model ReportedProduct {
  id      String  @id @default(cuid())
  reason  String
  details String?

  userId    String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  status ReportStatus @default(PENDING)

  createdAt  DateTime  @default(now())
  resolvedAt DateTime?

  @@index([userId])
  @@index([productId])
  @@index([status])
}

model ReportedBusiness {
  id      String  @id @default(cuid())
  reason  String
  details String?

  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  status ReportStatus @default(PENDING)

  createdAt  DateTime  @default(now())
  resolvedAt DateTime?

  @@index([userId])
  @@index([businessId])
  @@index([status])
}

/**
 * ===============================================================
 * NOTIFICATIONS / NOTIFICACIONES
 * ===============================================================
 */

model Notification {
  id      String           @id @default(cuid())
  type    NotificationType
  title   String
  message String
  read    Boolean          @default(false)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // URLs opcionales para redireccionar
  actionUrl String?

  // Metadata adicional en JSON
  metadata Json?

  createdAt DateTime  @default(now())
  readAt    DateTime?

  @@index([userId])
  @@index([read])
  @@index([type])
}

/**
 * ===============================================================
 * ENUMERACIONES
 * ===============================================================
 */

enum PlanType {
  FREE
  BASIC
  PREMIUM
}

enum PlanStatus {
  ACTIVE
  INACTIVE
  CANCELLED
  EXPIRED
}

enum UserRole {
  ADMIN
  USER
  BUSINESS
  SUPER_ADMIN
}

enum Permission {
  ALL
  MODERATE_CONTENT
  BAN_USERS
  MANAGE_PAYMENTS
  MANAGE_COUPONS
  VIEW_ANALYTIICS
}

enum ReportStatus {
  PENDING
  REVIEWED
  RESOLVED
  DISMISSED
}

enum NotificationType {
  NEW_REVIEW
  NEW_QUESTION
  NEW_ANSWER
  REVIEW_RESPONSE
  QUESTION_RESPONSE
  PRODUCT_AVAILABLE
  PLAN_EXPIRING
  PLAN_EXPIRED
  PAYMENT_RECEIVED
  ACONT_VERIFIED
  REPORT_RESOLVED
}

enum ProductCondition {
  NEW
  USED
  REFURBISHED
}
